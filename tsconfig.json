{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",

    "rootDir": "./src",
    "baseUrl": "./",

    "paths": {
      "@/*": ["./src/*"]
    },

    "outDir": "./dist",
    "removeComments": true,

    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,

    "strict": true,
    "noImplicitAny": true,

    "resolveJsonModule": true,
    "skipLibCheck": true
  },
  "include": ["src"]
}
